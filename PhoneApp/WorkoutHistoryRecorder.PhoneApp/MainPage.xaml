<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.MainPage">

    <StackLayout HorizontalOptions="CenterAndExpand">
        <Button Text="Close connection" Clicked="Button_Clicked_Close"/>

        <Entry Text="{Binding EntryString}" Placeholder="Enter message for watch"/>
        <Button Text="Send" Clicked="Button_Clicked_Send"/>

        <Button Text="Workout Template List" Clicked="Button_Clicked" VerticalOptions="EndAndExpand"/>
        <Button Text="Workout List" Clicked="Button_Clicked_2" VerticalOptions="EndAndExpand"/>
        <Button Text="Workout Record List" Clicked="Button_Clicked_1"  VerticalOptions="EndAndExpand"/>
    </StackLayout>


</ContentPage>
